@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager


    <p>You are not signed in. Would you like to sign in or continue as a guest?</p>
    <div class="nav-item">
        <a class="btn btn-primary" 
            asp-area="Identity" 
            asp-page="/Account/Login" 
            asp-route-returnUrl="@Url.Action("BookCar", "UserBooking")">Sign In</a>
    
        <a class="btn btn-primary" 
            asp-area="Identity" 
            asp-page="/Account/GuestRegister"
            asp-route-returnUrl="@Url.Action("BookCar", "GuestBooking")">Continue as Guest</a>
    </div>
