@model Booking
@{
    ViewData["Title"] = "Book a Car";
}

<h1>@ViewData["Title"]</h1>
<hr />
@Html.Partial("../Car/_CarDetails.cshtml", Model.Car)
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    @Html.LabelFor(model => model.CheckInDate)
                    @Html.TextBoxFor(model => model.CheckInDate, "{0:MM/dd/yyyy}", new { @class = "form-control datepicker" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.CheckOutDate)
                    @Html.TextBoxFor(model => model.CheckOutDate, "{0:MM/dd/yyyy}", new { @class = "form-control datepicker" })
                </div>
            </form>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-warning">Cancel</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}